<div><h1 class="h1cursiveRed">Final Results!</h1>
<br />

<h3 class="h3cursiveBlack">The best dancer is......</h3>
<% @final_winners.each do |winner| %>
  <marquee scrollamount="10"><h1 class="h1stencilRed"><%=winner.name.upcase%></h1></marquee>
<%end%>
<br />

<h3 class="h3cursiveBlack">The best drinker is.......</h3>
<% @final_drinkers.each do |drinker| %>
  <marquee scrollamount="10" direction="right"><h1 class="h1stencilRed"><%=drinker.name.upcase%></h1></marquee>
<%end%>
<br />

<h2>Overall Dancer Rankings</h2>
<table>
  <tr>
    <th>NAME</th>
    <th>WINS</th>
  </tr>

    <% @players_wins.each do |player| %>
        <tr>
        <td><font color="red"><%=player.name.upcase%></font></td>
        <td><font color="red"><%=player.number_of_wins%></font></td>
        </tr>
    <% end %>
</table>

<br /> <br />

<h2>Overall Drinker Rankings</h2>
<table>
  <tr>
    <th>NAME</th>
    <th>DRINKS</th>
  </tr>

    <% @players_drinks.each do |player| %>
        <tr>
        <td><font color="red"><%=player.name.upcase%></font></td>
        <td><font color="red"><%=player.number_of_drinks%></font></td>
        </tr>
    <% end %>
</table>

<br /> <br />

<button><%= link_to "START NEW GAME", '/welcome'%></button></div>
