<h1>And the winner is............... </h1>
<marquee><h1><%=@winner.name%></h2></marquee>
<h2> <%=@loser.name%> has to take <%=@turn.challenge.drinks %> drinks</h2>

<table>
  <tr>
    <th>Player Name</th>
    <th>Wins</th> 
    <th>Drinks</th>
  </tr>
  
<%  @ranking.each do |player| %>
    <tr>
     <td><%=player.name%></td> 
     <td><%=player.number_of_wins%></td>    
     <td><%=player.number_of_drinks%></td> 
     </tr>
<% end %>
     
     </table>
<br /> <br />
<button><%= link_to "Next round", new_turn_path%></button>
